<div class="container">
  <div class="page-header">
    <%= link_to new_plot_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Nouvelle Parcelle
    <% end %>
    <h1>Parcelles</h1>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Titre</th>
          <th>Légume</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @plots) do |plot| %>
          <td><%= plot.name unless plot.name.nil? %></td>  
          <td><%= plot.generation.plant.titre unless plot.generation.nil? %></td>
          <td><%= link_to 'Modifier', edit_plot_path(plot) %></td>
          <td><%= link_to 'Supprimer', plot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= render 'helper/index', title:"Couper la poire en deux", text:"Localisez géographiquement votre ferme, ajoutez et visualisez vos parcelles. Toutes les informations dont vous avez besoin sont ici." %>