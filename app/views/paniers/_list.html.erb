<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Semaine</th>
      <th>Qté</th>
      <th>Produits</th>
      <th>Prix</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @paniers.each do |panier| %>
        <tr <% unless panier.planted? %>class="alert-plant"<% end %>>
          <td><%= panier.semaine %></td>
          <td><%= number_field_tag "quantity", panier.quantity, class: "paniers-qty", id: panier.id, :data => { url: farm_panier_path(@farm.slug, panier)} %></td>
          <td>
          <select class="form-control">
            <% panier.portions.each do |portion| %> 
            <option><%= portion.quantity %>KG de <%= portion.legume.titre %></option>
            <% end %>
          </select>
            </td>
          <td><%= get_cart_total(panier.portions) %> €</td>
          <td>
          <%= link_to farm_panier_portions_path(@farm.slug, panier) do %>
            <span class="glyphicon glyphicon-plus"></span>
            Voir le panier
          <% end %>
          </td>
          <td>
          <%= link_to farm_panier_path(@farm.slug, panier), method: :delete, data: { confirm: 'Êtes-vous sur de vouloir le supprimer ?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
            Supprimer ce panier
          <% end %>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>