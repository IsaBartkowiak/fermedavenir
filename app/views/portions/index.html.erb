<div class="container">
  <div class="page-header">
    <%= link_to paniers_path, class: 'btn btn-default' do %>
      <span class="glyphicon glyphicon-list"></span>
      Retourner à la liste des paniers
    <% end %>

    <%= link_to new_panier_portion_path, class: 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      Ajouter un légume
    <% end %>

  <button class="btn btn-default" id="total-price">
    <% 
    price = 0
    @panier.portions.each do |p|
      price += p.price
    end 
    %>
    <%= price %> €
  </button>

  </div>

  <h1>Légumes du panier de la semaine <%= @panier.semaine %></h1><br>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Légume</th>
          <th>Génération</th>
          <th>Quantité (kg)</th>
          <th>Prix</th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody id="portions-list">
        <%= content_tag_for(:tr, @portions) do |portion| %>
              <td><%= portion.legume.titre %></td>
              <td>Conservable jusqu'à la semaine <%= portion.generation.conservation_to unless portion.generation.nil? %></td>
              <td><%= portion.quantity %></td>
              <td class="price" data-price="<%= portion.price %>"><%= portion.price %> €</td>
          <td><%= link_to 'Modifier', edit_panier_portion_path(@panier,portion) %></td>
          <td>
          <%= link_to panier_portion_path(@panier,portion), method: :delete, data: { confirm: 'Êtes vous sur ?' } do %>
            <span class="glyphicon glyphicon-trash"></span>
              Supprimer le légume du panier
          <% end %>
          </td>
        <% end %>
      </tbody>
    </table>

  </div>
</div>


<div class="container">
  <div class="col-xs-12">
    <% @generations.each do |generation| %>
    <div class="col-xs-4 well">
      <%= form_for([@panier, @portion], remote: true, html: { class: "form-horizontal", role: "form" }) do |f| %>
      <% if @portion.errors.any? %>
        <div class="alert alert-danger alert-dismissable" role="alert">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4><%= pluralize(@portion.errors.count, "error") %> prohibited this portion from being saved:</h4>

          <ul>
          <% @portion.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label generation.legume.titre, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.hidden_field :legume_id, value: generation.legume.id, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-10">
          <%= f.text_field :quantity, class: "form-control", placeholder: 'KG' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Ajouter au panier", class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>

    </div>
  <% end %> 
  </div>
</div>