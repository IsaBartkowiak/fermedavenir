<%= form_for([@hamper.farm, @hamper, @portion], html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @portion.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@portion.errors.count, "error") %> prohibited this portion from being saved:</h4>

      <ul>
      <% @portion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Légumes", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select :plant_id, Plant.all.collect {|l| [l.name, l.id]}, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Quantité", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :quantity, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Ajouter au panier", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
