<%= form_for(@portion, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @portion.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@portion.errors.count, "error") %> prohibited this portion from being saved:</h4>

      <ul>
      <% @portion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :panier_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :panier_id, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :legume, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :legume, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :generation, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :generation, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :quantity, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
