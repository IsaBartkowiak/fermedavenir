<div class="signup-background">
<div class="login">
<h2>Connexion</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field login-field">
    <%= f.label :email, class:"login-label" %><br />
    <%= f.email_field :email, autofocus: true, class:"login-input" %>
  </div>

  <div class="field login-field">
    <%= f.label :password, class:"login-label" %><br />
    <%= f.password_field :password, autocomplete: "off", class:"login-input" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field login-field">
      <%= f.check_box :remember_me,class:"login-check"%>
      <%= f.label :remember_me, class:"login-label" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class:"login-submit"%>
  </div>
<% end %>
<div class="center">
<%= render "devise/shared/links" %>
</div>
</div>
</div>