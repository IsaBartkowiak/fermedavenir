<div class="signup-background">
<div class="login">
<h2>Connexion</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field login-field">
    <%= f.label :Email, class:"login-label" %><br />
    <%= f.email_field :email, autofocus: true, class:"login-input",:placeholder => "exemple@gmail.com" %>
  </div>

  <div class="field login-field">
    <%= f.label :Mot_de_passe, class:"login-label" %><br />
    <%= f.password_field :password, autocomplete: "off", class:"login-input" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field login-field">
      <%= f.check_box :remember_me, class:"login-check"%>
      <%= f.label :remember_me,"Se souvenir de moi", class:"login-label" %>
      <%- if devise_mapping.recoverable? %>
      <%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: 'login-forgot' %>
      <% end -%>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Valider", class:"btn btn_green btn_submit"%>
  </div>
<% end %>
</div>
</div>