<div class="signup-background">
<div class="signup">
<h2>Inscription</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field signup-field">
    <%= f.label :email,"Adresse mail",class:"signup-label"%><br />
    <%= f.email_field :email, autofocus: true ,class:"signup-input",:placeholder => "votremail@mail.com" %>
  </div>

  <div class="field  signup-field">
    <%= f.label :password,"Mot de passe",class:"signup-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,class:"signup-input",:placeholder => "Votre mot de passe" %>
  </div>

  <div class="field  signup-field">
    <%= f.label :password_confirmation ,"Confirmation mot de passe",class:"signup-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" ,class:"signup-input",:placeholder => "Confirmer votre mot de passe"  %>
  </div>

  <div class="actions">
    <%= f.submit "Valider" ,class:"signup-submit"%>
  </div>
<% end %>
</div>
</div>