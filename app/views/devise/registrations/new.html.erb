<div class="signup-background">
<div class="login">
<h2>Inscription</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field login-field">
    <%= f.label :email,"Adresse email",class:"login-label"%><br />
    <%= f.email_field :email, autofocus: true ,class:"login-input",:placeholder => "exemple@gmail.com" %>
  </div>

  <div class="field  login-field">
    <%= f.label :password,"Mot de passe",class:"login-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,class:"login-input",:placeholder => "" %>
  </div>

  <div class="field  login-field">
    <%= f.label :password_confirmation ,"Confirmer le mot de passe",class:"login-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" ,class:"login-input",:placeholder => ""  %>
  </div>

  <div class="actions">
    <%= f.submit "Valider" ,class:"btn btn_green btn_submit"%>
  </div>
<% end %>
</div>
</div>
