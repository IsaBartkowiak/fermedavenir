<div class="signup">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field signup-field">
    <%= f.label :email ,"",class:"signup-label"%><br />
    <%= f.email_field :email, autofocus: true ,class:"signup-input",:placeholder => "Votre Email" %>
  </div>

  <div class="field  signup-field">
    <%= f.label :password ,class:"signup-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,class:"signup-input",:placeholder => "Votre mot de passe" %>
  </div>

  <div class="field  signup-field">
    <%= f.label :password_confirmation ,class:"signup-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" ,class:"signup-input",:placeholder => "Confirmer votre mot de passe"  %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" ,class:"signup-sumbit"%>
  </div>
<% end %>

<%= render "devise/shared/links"%>
</div>	