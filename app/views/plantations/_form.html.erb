<%= form_for(@plantation, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @plantation.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@plantation.errors.count, "error") %> prohibited this plantation from being saved:</h4>

      <ul>
      <% @plantation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :farm, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :farm, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :generation, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :generation, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :quantity, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :year, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :year, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn_green" %>
    </div>
  </div>
<% end %>
