<%= form_for(@legume, html: { class: "form-horizontal", role: "form" }) do |f| %>
<% if @legume.errors.any? %>
<div class="alert alert-danger alert-dismissable" role="alert">
  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <h4><%= pluralize(@legume.errors.count, "error") %> prohibited this legume from being saved:</h4>

  <ul>
    <% @legume.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="form-group">
  <div class="col-xs-12 col-sm-6">
    <%= f.label :titre, class: "control-label" %>
    <%= f.text_field :titre, class: "form-control" %>
  </div>
  <div class="col-xs-12 col-sm-6">
    <%= f.label :variete, class: "control-label" %>
    <%= f.text_field :variete, class: "form-control" %>
  </div>
</div>

<div class="form-group">
<div class="col-xs-12 col-sm-12">
    <%= f.label :caracteristique, class: "control-label" %>
    <%= f.text_field :caracteristique, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-xs-12 col-sm-6">
    <%= f.label "Prix", class: "control-label" %>
    <%= f.number_field :price, class: "form-control", placeholder: 'Prix au kilos', :step => 'any', min: 0 %>
  </div>
  <div class="col-xs-12 col-sm-6">
    <%= f.label "Graines/kilo", class: "control-label" %>
    <%= f.number_field :nb_per_kilo, class: "form-control", placeholder: 'Nombre de graines à planter par kilo (ou par bottes)', :step => 'any' %>
  </div>
</div>

    <%= f.submit "Enregistrer ce légume", class: "btn btn_green" %>
</div>
<% end %>
