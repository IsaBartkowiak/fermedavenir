<%= form_for(@legume, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @legume.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@legume.errors.count, "error") %> prohibited this legume from being saved:</h4>

      <ul>
      <% @legume.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :titre, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :titre, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :variete, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :variete, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :caracteristique, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :caracteristique, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Prix", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :price, class: "form-control", placeholder: 'Prix au kilos', :step => 'any', min: 0 %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Graines/kilo", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :nb_per_kilo, class: "form-control", placeholder: 'Nombre de graines à planter par kilo (ou par bottes)', :step => 'any' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Enregistrer ce légume", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
